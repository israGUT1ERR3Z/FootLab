<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FootLab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">#DEDFE5</item>
        <item name="colorPrimaryVariant">#2752D4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Otros ajustes específicos del tema -->
    </style>

    <style name="Theme.Design.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">#DEDFE5</item>
        <item name="colorPrimaryVariant">#2752D4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">#27276F</item>
        <!-- Otros ajustes específicos del tema -->
    </style>

    <!-- Splash Theme -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
