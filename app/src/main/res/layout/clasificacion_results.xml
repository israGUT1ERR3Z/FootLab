<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/originalImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/tissue1ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/originalImageView"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/tissue2ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tissue1ImageView"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/tissue3ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tissue2ImageView"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/classificationResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tissue3ImageView"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"/>
</RelativeLayout>
