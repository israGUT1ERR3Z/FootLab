<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistorialClinicoFragment"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewHistorial"
            android:layout_marginTop="0dp"
            android:text="@string/historial_clinico"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold"/>

        <!-- Campos del historial clÃ­nico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNombres"
            android:layout_below="@id/textViewHistorial"
            android:text="@string/nombre_completo"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="45dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/editTextNombres"
            android:hint="@string/ingresa_tu_nombre_completo"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@id/textViewNombres"
            android:background="@drawable/border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewFechaNacimiento"
            android:layout_below="@id/textViewNombres"
            android:text="@string/fecha_de_nacimiento_dd_mm_yyyy"
            android:textColor="#555555"
            android:padding="6dp"
            android:textSize="16sp"
            android:layout_marginTop="45dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextFechaNacimiento"
            android:hint="@string/ingresa_fecha_de_nacimiento_dd_mm_yyyy"
            android:inputType="date"
            android:textSize="16sp"
            android:padding="6dp"
            android:layout_below="@id/textViewFechaNacimiento"
            android:background="@drawable/border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_below="@+id/editTextFechaNacimiento"
            android:layout_marginTop="16dp"
            android:padding="0dp"> <!-- Removed extra padding -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp"> <!-- Added a margin to align fields properly -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/estatura_cm"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:layout_gravity="start"/> <!-- Align text to the start -->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextEstatura"
                    android:hint="@string/ingresa_estatura_cm"
                    android:textSize="16sp"
                    android:padding="1dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:ems="6"
                    android:background="@drawable/border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"> <!-- Adjust margins for better spacing -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/peso_kg"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingBottom="4dp"
                    android:layout_gravity="start"/> <!-- Align text to the start -->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextPeso"
                    android:hint="@string/ingresa_peso"
                    android:textSize="16sp"
                    android:padding="1dp"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:ems="6"
                    android:background="@drawable/border"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"> <!-- Adjust margins for proper alignment -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/imc"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:paddingBottom="4dp"
                    android:layout_gravity="start"/> <!-- Align text to the start -->

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextIMC"
                    android:hint="@string/ingresa_imc"
                    android:textSize="16sp"
                    android:padding="1dp"
                    android:inputType="numberDecimal"
                    android:enabled="false"
                    android:maxLength="5"
                    android:ems="6"
                    android:background="@drawable/border" />
            </LinearLayout>

        </LinearLayout>

